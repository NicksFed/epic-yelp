@{
  Layout = "_Layout";
}

@model RestaurantApp.Models.Restaurant

<h2>Add an review</h2>

<h4>Add an review to this restaurant: @Html.DisplayFor(model => model.RestaurantName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RestaurantId)

    @Html.Label("Select review")
    @Html.DropDownList("ReviewId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>